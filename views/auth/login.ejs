<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>


    <body>
        <%- include('../includes/nav.ejs') %>


            <main>
                <% if(errorMessage) { %> 
                <div  class="user-message user-message-error"><%= errorMessage %> </div>
                <% } %> 
                <form class="login-form" action="/login" method="POST">
                    <div class="form-control">
                        <label for="email">E-MAIL</label>
                        <input class="<%= (invalid=='Email')?"invalid":""  %> "
                        type="email" name="email" id="email" value="<%=oldInput.email%> ">
                    </div>
                    <div class="form-control">
                        <label for="password">Password</label>
                        <input class="<%= (invalid=='Password')?"invalid":""  %> "
                         type="password" name="password" id="password" value="<%=oldInput.password%>"">
                    </div>
                         <!-- for csrf protection -->
                         <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    <button class="btn" type="submit">Login</button>
                </form>
                <% if(errorMessage) { %>
                    <div style="text-align: center;" >
                <a href="/reset">Forgotpassword</a>
                </div>
                <% } %> 
            </main>

            <%- include('../includes/end.ejs') %>